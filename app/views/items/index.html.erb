<p id="notice"><%= notice %></p>

<h1>商品検索</h1>

<table class='table table-striped table-hover table-bordered'>
  <thead>
    <tr>
      <th><div class="text-center">Series</div></th>
      <th><div class="text-center">Type number</div></th>
      <th><div class="text-center">Item name</div></th>
      <th><div class="text-center">Tax excluded</div></th>
      <th><div class="text-center">Tax included</div></th>
      <th><div class="text-center">Special</div></th>
      <th><div class="text-center">Color</div></th>
      <th><div class="text-center">Contact</div></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.series %></td>
        <td><%= item.type_number %></td>
        <td><%= item.item_name %></td>
        <td><%= item.tax_excluded %></td>
        <td><%= item.tax_included %></td>
        <td><%= item.special %></td>
        <td><%= item.color.name %></td>
        <td><%= item.contact.name %></td>
        <td><%= link_to BUTTON[:SHOW_NAME], item, class: 'btn btn-primary' %></td>
        <td><%= link_to BUTTON[:EDIT_NAME], edit_item_path(item), class: 'btn btn-primary' %></td>
        <td><%= link_to BUTTON[:DELETE_NAME], item, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to BUTTON[:CREATE_NAME], new_item_path, class: 'btn btn-primary' %>
