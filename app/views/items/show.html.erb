<form class="form-horizontal">

  <div class='form-group'>
    <label class="col-sm-2 control-label"></label>
    <div class='col-sm-10'>
      <p class="form-control-static">
        <% if @item.image? %>
          <div class="thumbnail">
            <%= image_tag @item.image.url %>
          </div>
      <% end %>
      </p>
    </div>
  </div>

  <div class='form-group'>
    <label class="col-sm-2 control-label">シリーズ名</label>
    <div class='col-sm-10'>
      <p class="form-control-static"><%= @item.series %></p>
    </div>
  </div>

  <div class='form-group'>
    <label class="col-sm-2 control-label">型番</label>
    <div class='col-sm-10'>
      <p class="form-control-static"><%= @item.type_number %></p>
    </div>
  </div>

  <div class='form-group'>
    <label class="col-sm-2 control-label">商品名</label>
    <div class='col-sm-10'>
      <p class="form-control-static"><%= @item.item_name %></p>
    </div>
  </div>

  <div class='form-group'>
    <label class="col-sm-2 control-label">税抜き価格</label>
    <div class='col-sm-10'>
      <p class="form-control-static"><%= number_to_currency(@item.tax_excluded, unit: '¥', format: '%u%n', precision: 0) %></p>
    </div>
  </div>

  <div class='form-group'>
    <label class="col-sm-2 control-label">税込み価格</label>
    <div class='col-sm-10'>
      <p class="form-control-static"><%= number_to_currency(@item.tax_included, unit: '¥', format: '%u%n', precision: 0) %></p>
    </div>
  </div>

  <div class='form-group'>
    <label class="col-sm-2 control-label">特徴</label>
    <div class='col-sm-10'>
      <p class="form-control-static"><%= @item.special %></p>
    </div>
  </div>

  <div class='form-group'>
    <label class="col-sm-2 control-label">カラー</label>
    <div class='col-sm-10'>
      <p class="form-control-static"><%= @item.color.name %></p>
    </div>
  </div>

  <div class='form-group'>
    <label class="col-sm-2 control-label">外部端子</label>
    <div class='col-sm-10'>
      <p class="form-control-static">
        <%= contact_name_join(@item) %>
      </p>
    </div>
  </div>

</form>

<%= link_to BUTTON[:EDIT_NAME], edit_item_path(@item), class: 'btn btn-primary' %>
<%= link_to BUTTON[:RETURN_NAME], items_path, class: 'btn btn-primary' %>
