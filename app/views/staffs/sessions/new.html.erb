<% content_for :stylesheets do %>
    <style type="text/css">
      body {
        background-color: #f5f5f5;
      }
      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 120px auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
        -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
        box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
      }
    </style>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
    <% if notice %>
        <div style="color:green; font-size:12px">
          <b><%= notice %></b>
        </div>
        <br>
    <% end %>
    <% if alert %>
        <div style="color:red; font-size:12px">
          <b><%= alert %></b>
        </div>
        <br>
    <% end %>
    <%= f.email_field :email, :placeholder => "Email", autofocus: true, class: 'form-control' %>
    <br>
    <%= f.password_field :password, :placeholder => "Password", autocomplete: "off", class: 'form-control' %>
    <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    <% end -%>
    <br>
    <br>
    <%= button_tag(type: 'submit', class: 'btn btn-lg btn-primary btn-block') do %>
        Login
    <% end %>
<% end %>

<% if false %>
    <%= render "staffs/shared/links" %>
<% end %>
