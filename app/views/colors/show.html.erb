<form class="form-horizontal">
  <p id="notice"><%= notice %></p>

  <div class='form-group'>
    <label class="col-sm-2 control-label">名前</label>
    <div class='col-sm-10'>
      <p class="form-control-static"><%= @color.name %></p>
    </div>
  </div>

  <div class='form-group'>
    <label class="col-sm-2 control-label">備考</label>
    <div class='col-sm-10'>
      <p class="form-control-static"><%= @color.note %></p>
    </div>
  </div>

</form>

<%= link_to BUTTON[:EDIT_NAME], edit_color_path(@color), class: 'btn btn-primary' %>
<%= link_to BUTTON[:RETURN_NAME], colors_path, class: 'btn btn-primary' %>
