<p id="notice"><%= notice %></p>

<h1>カラー</h1>

<table class='table table-striped table-hover table-bordered'>
  <thead>
  <tr>
    <th><div class="text-center">名前</div></th>
    <th><div class="text-center">備考</div></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @colors.each do |color| %>
      <tr>
        <td><%= color.name %></td>
        <td><%= color.note %></td>
        <td><%= link_to BUTTON[:SHOW_NAME], color, class: 'btn btn-primary' %></td>
        <td><%= link_to BUTTON[:EDIT_NAME], edit_color_path(color), class: 'btn btn-primary' %></td>
        <td><%= link_to BUTTON[:DELETE_NAME], color, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-primary' %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to BUTTON[:CREATE_NAME], new_color_path, class: 'btn btn-primary' %>
